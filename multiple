// app/globals.css
/* Subtle background texture utility */
@layer utilities {
  .bg-texture {
    background-color: hsl(var(--background));
    background-image:
      radial-gradient(rgba(0, 0, 0, 0.035) 1px, transparent 1px),
      radial-gradient(rgba(0, 0, 0, 0.02) 1px, transparent 1px);
    background-position: 0 0, 25px 25px;
    background-size: 50px 50px, 50px 50px;
    background-attachment: fixed;
  }
  .dark .bg-texture {
    background-image:
      radial-gradient(rgba(255, 255, 255, 0.055) 1px, transparent 1px),
      radial-gradient(rgba(255, 255, 255, 0.035) 1px, transparent 1px);
  }

  .bg-app-texture {
    /* base blanca + degradado 50% + grano sutil */
    background-color: #ffffff;
    background-image:
      /* Degradado principal: 50% de cobertura desde arriba */
      linear-gradient(
        180deg,
        rgba(255, 87, 34, 0.10) 0%,
        rgba(255, 87, 34, 0.06) 50%,
        rgba(255, 87, 34, 0.00) 100%
      ),
      /* acentos suaves en esquinas para profundidad */
      radial-gradient(60% 60% at 0% 0%, rgba(102, 41, 56, 0.06) 0%, rgba(102, 41, 56, 0) 60%),
      /* grano sutil */
      radial-gradient(rgba(0,0,0,0.03) 1px, rgba(0,0,0,0) 1px);
    background-size: auto, auto, 6px 6px;
    background-position: center, center, 0 0;
    background-attachment: fixed, fixed, fixed;
  }

  .dark .bg-app-texture {
    background-color: #121212;
    background-image:
      linear-gradient(
        180deg,
        rgba(255, 87, 34, 0.12) 0%,
        rgba(255, 87, 34, 0.08) 50%,
        rgba(255, 87, 34, 0.00) 100%
      ),
      radial-gradient(60% 60% at 0% 0%, rgba(255,255,255,0.06) 0%, rgba(255,255,255,0) 60%),
      radial-gradient(rgba(255,255,255,0.04) 1px, rgba(0,0,0,0) 1px);
  }

  .glass {
    background: rgba(255, 255, 255, 0.5); /* ~50% transparencia */
    backdrop-filter: saturate(140%) blur(14px);
    -webkit-backdrop-filter: saturate(140%) blur(14px);
    border: 1px solid rgba(255, 255, 255, 0.28);
    box-shadow: 0 8px 30px rgba(0,0,0,0.08);
  }
  .dark .glass {
    background: rgba(17, 17, 19, 0.5);
    border-color: rgba(255,255,255,0.14);
    box-shadow: 0 8px 30px rgba(0,0,0,0.35);
  }

  .glass-card {
    background: rgba(255, 255, 255, 0.5); /* ~50% transparencia */
    backdrop-filter: saturate(140%) blur(14px);
    -webkit-backdrop-filter: saturate(140%) blur(14px);
    border: 1px solid rgba(255, 255, 255, 0.28);
    border-radius: 1rem;
    box-shadow: 0 10px 40px rgba(0,0,0,0.10);
  }
  .dark .glass-card {
    background: rgba(17, 17, 19, 0.5);
    border-color: rgba(255,255,255,0.14);
    box-shadow: 0 10px 40px rgba(0,0,0,0.45);
  }
}

// app/layout.tsx
import { cn } from "@/lib/utils";
import { Inter, Playfair_Display, Bai_Jamjuree } from 'next/font/google';
import "./globals.css";

const inter = Inter({ subsets: ["latin"] });
const playfairDisplay = Playfair_Display({ subsets: ["latin"], variable: "--font-playfair-display" });
const baiJamjuree = Bai_Jamjuree({ subsets: ["latin"], variable: "--font-bai-jamjuree" });

export const metadata = {
  title: "Create Next App",
  description: "Generated by create next app",
};

export default function RootLayout({ children }: { children: React.ReactNode }) {
  return (
    <html lang="en">
      <body className={cn("font-body text-dark antialiased bg-app-texture", playfairDisplay.variable, inter.variable, baiJamjuree.variable)}>
        {children}
      </body>
    </html>
  );
}

